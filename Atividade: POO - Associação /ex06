#Crie a classe Casa que é composta por vários Comodos (sala, cozinha, quarto, etc.). Cada Comodo deve ser criado dentro da Casa.

class Comodo:
    def __init__(self, nome):
        self.nome = nome
        print(f"Cômodo {self.nome} criado.")

    def __del__(self):
        print(f"Cômodo {self.nome} destruído.")

class Casa:
    def __init__(self):
        #Criando os cômodos dentro da casa (composição)
        self.sala = Comodo("Sala")
        self.cozinha = Comodo("Cozinha")
        self.quarto = Comodo("Quarto")
        print("Casa criada com todos os cômodos.")

    def mostrar_comodos(self):
        print("A casa possui os seguintes cômodos:")
        for c in [self.sala, self.cozinha, self.quarto]:
            print(f"- {c.nome}")

    def __del__(self):
        print("Casa destruída, todos os cômodos também serão destruídos.")


#Criando a casa
minha_casa = Casa()
minha_casa.mostrar_comodos()

#Apagando a casa
del minha_casa